        <Button Content="Izađi iz igre" Margin="740,959,740,31" VerticalAlignment="Stretch" Click="Button_Click_3" HorizontalAlignment="Stretch" FontSize="48" Background="#33FFFFFF" Foreground="White" BorderBrush="White" CornerRadius="20"/>
