        <Button Content="Nova igra" Margin="740,569,740,421" VerticalAlignment="Stretch" Click="Button_Click" HorizontalAlignment="Stretch" FontSize="48" Background="#33FFFFFF" BorderBrush="White" FocusVisualPrimaryBrush="Black" Foreground="White" CornerRadius="20"/>
